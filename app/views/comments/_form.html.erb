<%= form_for [ @movie, @comment ] do |f| %>
  <form>
    <div class="form-group">
      <%= f.label :body, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">  
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
<% end %>
